<% provide(:title, "Create Payout") %>
<h1>Create Payout</h1>

<div class="row">
  <div class="offset1">
    <%= form_for(@payout) do |f| %>
    <%= render 'validation/error_messages_payout' %>

    <div class="field">
      <%= f.label :year %><br>
      <%= f.text_field(:year, value: Time.new.year) %>
    </div>
    <div class="field">
      <%= f.label :round %><br>
      <%= f.text_field :round, :autofocus => true %>
    </div>
    <div class="field">
      <%= f.label "Payout per game ($)" %><br>
      <%= f.text_field :game_payout %>
    </div>
    <div class="offset2">
      <%= f.submit "Create Payout", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
