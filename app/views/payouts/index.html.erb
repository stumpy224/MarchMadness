<% provide(:title, "Show Payouts") %>
<h1>Listing payouts</h1>
<table>
  <thead>
    <tr>
      <th class="column">Year</th>
      <th class="column">Round</th>
      <th class="column">Payout per Game</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payouts.each do |payout| %>
    <tr>
      <td class="column"><%= payout.year %></td>
      <td class="column"><%= payout.round %></td>
      <td class="column">$<%= payout.game_payout %></td>
      <td class="column"><%= link_to "Show", payout %> |</td>
      <td><%= link_to "Edit", edit_payout_path(payout) %> |</td>
      <td><%= link_to "Destroy", payout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Payout', new_payout_path %>
