<% provide(:title, "Login") %>
<h1>Login</h1>
<div class="row">
  <%= form_tag sessions_path do %>
  <div>
    <%= label_tag "user_name", "Username" %>
    <%= text_field_tag "user_name" %>
  </div>
  <div>
    <%= label_tag "password", "Password" %>
    <%= password_field_tag "password" %>
  </div>
  <div>
    <%= submit_tag "Login", class: "btn btn-default btn-primary" %>
  </div>
  <% end %>
</div>
