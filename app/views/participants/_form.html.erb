<div class="row">
  <div class="offset1">
    <%= form_for(@participant) do |f| %>
    <%= render 'validation/error_messages_participant' %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, :autofocus => true %>
    </div>

    <h3>Squares</h3>
    <div id="squares">
      <%= f.fields_for :squares do |square| %>
      <%= render 'square_fields', :f => square %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add square', f, :squares %>
      </div>
    </div>

    <div class="offset4">
      <%= f.submit "Save Participant", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
