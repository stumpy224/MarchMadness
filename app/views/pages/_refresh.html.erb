<% last_updated_format = 'Last updated: %m/%d/%Y at %I:%M %p' %>
<div align='center' class='page-header' style='padding-top:5px;padding-bottom:15px;'>
  <% if path == refresh_results_path %>
    <div id='resultsLastUpdated'>
    <% last_updated_at = @years.find_by(year: $year).results_last_updated_at %>
    <% if !last_updated_at.blank? %>
      <%= last_updated_at.strftime(last_updated_format) %>
    <% end %>
    </div>
    <div style='padding-top: 10px;'>
      <%= link_to 'Refresh', path, id: 'refreshResultsLink', remote: true, class: 'btn btn-default btn-primary' %>
    </div>
  <% else %>
    <div>
    <% last_updated_at = @years.find_by(year: $year).bracket_last_updated_at %>
    <% if !last_updated_at.blank? %>
      <%= last_updated_at.strftime(last_updated_format) %>
    <% end %>
    </div>
    <div style='padding-top: 10px;'>
      <%= link_to 'Refresh', path, id: 'refreshBracketLink', remote: true, class: 'btn btn-default btn-primary' %>
    </div>
  <% end %>
</div>
