<% provide(:title, "Participant Digits") %>
<h1>Enter Participant Digits</h1>

<div class="row">
  <div class="offset1">
    <%= form_for(@digit) do |f| %>
      <%= render 'validation/error_messages_digit' %>

      	<%= f.label "Select Participant" %>
		<%= f.select('user_id', @user.collect {|usr| [h(usr.first_name + ' ' + usr.last_name)] }, { :include_blank => true }) %>

      <%= f.label :winner_digit %>
      <%= f.text_field :winner_digit %>

      <%= f.label :loser_digit %>
      <%= f.text_field :loser_digit %>

      <div class="offset3">
        <%= f.submit "Enter", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>